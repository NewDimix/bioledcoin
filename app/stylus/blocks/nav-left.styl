nav-left__icon()
    cursor pointer
    border-radius 1px
    height 3px
    width 25px
    background-color $green-color
    position absolute
    display block
    content ''
    transition all .2s ease .2s, transform .2s ease 0s

.nav-left
    background linear-gradient(to bottom, $green-color 40%, #00ddba 80%)

    @media print
        display none

    &__btn
        position fixed
        left 8px
        top 18px
        width 25px
        height 20px
        background-color transparent
        border none
        transition all .45s ease

        @media (min-width 768px)
            display none

        &:hover
            cursor pointer

        &:focus
            outline none
            box-shadow 0 0 0 2px #f8f9fd, 0 0 0 3px $green-color

        &.open
            left 22px

            &:focus
                outline none
                box-shadow 0 0 0 2px $green-color, 0 0 0 3px #f8f9fd

            .nav-left__icon
                background-color transparent

                &:before
                    background-color white
                    transform rotate(45deg)
                    top 0
                    transition all .2s ease 0s, transform .2s ease .2s

                &:after
                    background-color white
                    transform rotate(-45deg)
                    bottom 0
                    transition all .2s ease 0s, transform .2s ease .2s

    &__icon
        position absolute
        top 50%
        left 0
        transform translatey(-50%)
        nav-left__icon()

        &:before, &:after
            nav-left__icon()

        &:before
            top 8px

        &:after
            bottom 8px

    &__logo
        margin-bottom 25px
        margin-top 25px

    .mCSB_scrollTools
        width 8px

    .mCSB_inside>.mCSB_container
        margin-right 0
