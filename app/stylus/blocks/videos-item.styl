.videos-item
    position relative
    height 160px
    overflow hidden
    background-color white
    width 260px
    transition all 1s ease

    @media (min-width 480px)
        height 200px
        width 400px

    @media (min-width 590px)
        height 221px

    @media (min-width 690px)
        margin-right 40px
        height 271px
        width 550px

    @media (min-width 1245px)
        height 271px
        width 375px

    @media (max-width 1245px)
        opacity .5
        transform scale(.9)

    display block

    &__video-wrap
        padding-bottom 61.25%
        padding-top 0px

        @media (min-width 480px)
            padding-bottom 50.25%
            padding-top 0px

        @media (min-width 590px)
            padding-bottom 55.25%
            padding-top 0px

        @media (min-width 690px)
            padding-bottom 71.25%
            padding-top 0px

    &:focus
        outline none

    &.slick-current
        opacity 1
        transform scale(1)

    &:focus
        outline none

    &__video
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%) scale(1.01)
        width 100%

     &__video-wrap
        position relative
        height 0

        iframe
            position absolute
            top 0
            left 0
            width 100%
            height 100%
