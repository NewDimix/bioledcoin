.videos-item
    position relative
    height 160px
    overflow hidden
    background-color white

    @media (min-width 480px)
        height 200px

    @media (min-width 590px)
        height 221px

    @media (min-width 690px)
        margin-right 7%
        height 271px

    &:first-child
        margin-bottom 15px

        @media (min-width 690px)
            margin-bottom 35px

    &:focus
        outline none

    &_small
        display block
        margin-bottom 15px

        @media (min-width 690px)
            {ibt}
            width 46.5%
            margin-bottom 0

        &+.videos-item_small
            @media (min-width 480px)
                margin-right 0

        .videos-item__video-wrap
            padding-bottom 61.25%
            padding-top 0px

            @media (min-width 480px)
                padding-bottom 50.25%
                padding-top 0px

            @media (min-width 590px)
                padding-bottom 55.25%
                padding-top 0px

            @media (min-width 690px)
                padding-bottom 100.25%
                padding-top 0px

    &_big
        display block

        @media (min-width 690px)
            margin-right 0

        .videos-item__video-wrap
            padding-bottom 61.25%
            padding-top 0px

            @media (min-width 480px)
                padding-bottom 50.25%
                padding-top 0px

            @media (min-width 590px)
                padding-bottom 55.25%
                padding-top 0px

            @media (min-width 690px)
                padding-bottom 46.25%
                padding-top 0px

    &__video
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%) scale(1.01)
        width 100%

     &__video-wrap
        position relative
        height 0

        iframe
            position absolute
            top 0
            left 0
            width 100%
            height 100%
