.full-news
    padding-top 55px
    padding-bottom 45px

    &__header
        position relative

    &__title
        text-align center
        hyphens()
        margin-bottom 15px

        @media (min-width 768px)
            margin-bottom 20px
            padding-left 100px

        @media (min-width 992px)
            margin-bottom 30px

        @media (min-width 1260px)
            margin-bottom 40px

        h1
            text-align center
            font-weight 300
            font-size-func(35)
            margin-top 0
            margin-bottom 0
            hyphens()

            @media (min-width 480px)
                font-size-func(38)

            @media (min-width 768px)
                font-size-func(41)

            @media (min-width 992px)
                font-size-func(44)

            @media (min-width 1265px)
                font-size-func(48)

    &__date
        {ibt}
        color white
        background-color $green-color
        padding 15px
        border-radius 5px
        font-size-func(16)
        ellipsis()
        max-width 100%
        margin-bottom 20px

        @media (min-width 768px)
            position absolute
            left 0
            top 50%
            transform translateY(-50%)

    &__text
        font-size-func(16)
        text-align justify
        margin-bottom 40px
        line-height 2em
        hyphens()

        p
            text-indent 30px
            margin-top 0
            margin-bottom 0

            &:last-child
                margin-bottom 0

        img
            margin-top 25px
            margin-bottom 25px
            width 100%
            float left
            margin-right 50px

            @media (min-width 768px)
                width 50%

    &__hr
        margin-top 0
        margin-bottom 25px

    &__share
        font-size-func(16)
        font-family GothamPro

        span
            {ibm}
            margin-right 15px
            margin-bottom 10px

    &__social
        {ibm}
        margin-bottom 10px

    br
        @media (min-width 480px)
            display none
