.game-img
    display none
    position fixed
    left 0
    bottom 0
    height 150px

    @media (min-height 400px)
        height auto

    @media (min-width 768px)
        display block

    &:hover
        .game-img__close
            &:before, &:after
                opacity 1

        img
            transform none

    &__close
        position relative
        width 20px
        height 20px
        border none
        background none

        &:before, &:after
            content ''
            width 20px
            height 3px
            background-color $dark-color
            position absolute
            top 50%
            left 50%
            border-radius 5px
            opacity 0
            transition all .3s ease

        &:before
            transform translate(-50%, -50%) rotate(45deg)

        &:after
            transform translate(-50%, -50%) rotate(-45deg)


    a
        {ibt}

    img
        height 100%
        width auto
        transform rotate(55deg) translateX(-40px)
        transition all .5s ease
