.conditions-section
    padding-top 15px
    padding-bottom 18px
    font-size 0

    @media (min-width 480px)
        padding-top 19px
        padding-bottom 22px

    @media (min-width 768px)
        padding-top 22px
        padding-bottom 32px

    @media (min-width 992px)
        padding-top 27px
        padding-bottom 42px

    @media (min-width 1265px)
        padding-top 32px
        padding-bottom 77px

    &__text
        font-size 14px
        line-height 24px
        line-height 2.4rem

        @media (min-width 992px)
            {ibt}
            width 48%
            margin-left 2%

        p
            margin-bottom 25px

    &__title
        hyphens()

        h2
            text-align center
            font-weight 300
            font-size-func(35)
            margin-top 0
            margin-bottom 25px

            @media (min-width 480px)
                font-size-func(38)
                margin-bottom 40px

            @media (min-width 768px)
                font-size-func(41)
                margin-bottom 50px

            @media (min-width 992px)
                font-size-func(44)
                margin-bottom 60px

            @media (min-width 1265px)
                font-size-func(48)
                margin-bottom 78px

    &__chart-wrap
        position relative
        padding-bottom 330px
        height 0
        overflow hidden

        @media (min-width 480px)
            padding-bottom 360px

        @media (min-width 768px)
            padding-bottom 390px

        @media (min-width 992px)
            {ibt}
            width 50%
            padding-bottom 420px

        @media (min-width 1265px)
            padding-bottom 450px

    #conditions-pie-chart
        position absolute
        top 0
        left 0
        width 100%
        height 100%
