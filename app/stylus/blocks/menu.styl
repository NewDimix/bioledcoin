$xs = 480px // min width for full-screen menu
$sm = 992px

$menu-icon-bgc = white // color menu icon
$menu-btn-c = white // the color of the inscription "MENU"
$menu-btn-bgc = #00833e // background color of the menu button



//////////////////////////////////////////// Mobile (xs):

// 1 level menu:
$menu-1-bgc-m = #00b254 // background color
$menu-1-c-m = white // text color

menu-1-p-m() // padding for a/span
    padding 17px 30px 17px 41px


$menu-1-bw-m = 1px // border width for li
$menu-1-bc-m = rgba(255, 255, 255, 0.7) // border color for li



//////////////////////////////////////////// Desktop (sm):

// 1 level menu:
$menu-1-bgc-d = transparent // background color
$menu-1-c-d = white // text color

menu-1-p-d() // padding for a/span
    padding 15px 22px



menu__icon()
    cursor pointer
    border-radius 1px
    height 3px
    width 25px
    background-color $menu-icon-bgc
    position absolute
    display block
    content ''
    transition all .2s ease .2s, transform .2s ease 0s

ul()
    list-style none
    padding-left 0
    transition all 0s ease-out 0s
    margin-top 0
    margin-bottom 0
    padding-top 0
    padding-bottom 0

a()
    {ibt}
    width 100%
    font-size-func(16)
    font-weight 400
    line-height 18px
    line-height 1.8rem
    text-decoration none

.menu
    position relative
    font-size 0

    @media (min-width $xs)
        display block
        text-align center

    @media (min-width $sm)
        {ibm}

    ul
        ul()

    li
        hyphens()
        text-align left

    a
        a()

    span
        {ibt}
        font-size-func(16)
        font-weight 700
        line-height 16px
        line-height 2.6rem
        text-transform uppercase
        text-decoration none
        cursor pointer

    &__btn
        width 100%
        background-color $menu-btn-bgc
        background linear-gradient(-27deg, rgba(48, 180, 184, 0.7) 10%, rgba(89, 220, 186, 0.7) 45%, #59dcba 55%, rgba(141, 186, 78, 0.7) 90%) center
        color $menu-btn-c
        width 100%
        text-align left
        position relative
        cursor pointer
        user-select none
        padding-left 45px
        border none
        border-top 2px solid rgba(255, 255, 255, 0.7)
        border-bottom 2px solid rgba(255, 255, 255, 0.7)
        ellipsis()

        @media (min-width $xs)
            display none

        &:focus
            outline 1px dotted red

        &.open
            .menu__icon
                background-color transparent

                &:before
                    transform rotate(45deg)
                    top 0
                    transition all .2s ease 0s, transform .2s ease .2s

                &:after
                    transform rotate(-45deg)
                    bottom 0
                    transition all .2s ease 0s, transform .2s ease .2s

    &__icon
        position absolute
        top 50%
        left 10px
        transform translatey(-50%)
        menu__icon()

        &:before, &:after
            menu__icon()

        &:before
            top 8px

        &:after
            bottom 8px

    &__title
        text-transform uppercase
        font-size-func(18)
        padding-top 8px
        padding-bottom 8px
        font-weight 700

    &__ul
        background-color $menu-1-bgc-m
        background linear-gradient(-45deg, rgba(48, 180, 184, 0.7) 10%, rgba(89, 220, 186, 0.7) 50%, rgba(141, 186, 78, 0.7) 90%) center
        display none
        max-width 100%

        @media (min-width $xs)
            background-color $menu-1-bgc-d
            background none
            display block !important
            padding 14px 0

        ul
            display none

        span
            width 100%
            font-size-func(12)
            line-height 16px
            line-height 1.6rem
            letter-spacing 0

        > li
            position relative
            border-bottom $menu-1-bw-m solid $menu-1-bc-m

            @media (min-width $xs)
                {ibt}
                border none

            &:last-child
                @media (min-width $xs)
                    margin-right 0

    &__link
        menu-1-p-m()
        color $menu-1-c-m
        transition all .15s ease

        @media (min-width $xs)
            menu-1-p-d()
            color $menu-1-c-d
            border 2px solid transparent
            border-radius 50px

        &:hover
            background-color rgba(255, 255, 255, 0.1)

            @media (min-width $xs)
                border 2px solid white

        &:active
            @media (min-width $sm)
                transform scale(.95)
