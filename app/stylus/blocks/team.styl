.team
    font-size 0

    &__team-item-wrap
        margin-bottom 18px

        @media (min-width 480px)
            margin-bottom 28px

        @media (min-width 768px)
            margin-bottom 32px
            text-align center

        @media (min-width 992px)
            margin-bottom 38px

        @media (min-width 1265px)
            margin-bottom 40px

    &__more
        text-align center
        hyphens()
        margin-left auto
        margin-right auto

        button
            font-size-func(24)
            color $dark-color
            font-weight 300
            text-decoration underline
            padding-bottom 5px
            opacity .8
            transition all .1s ease
            padding 10px 20px
            border-radius 30px
            background none
            border 2px solid transparent
            transition all .5s ease
            font-family GothamPro

            &:focus
                outline none
                border 2px solid rgba(61, 83, 100, 0.8)
                text-decoration none

            &:hover
                opacity 1
