.message-security
    position relative
    border-radius 5px
    border 1px solid #dddddd
    padding 24px 62px
    overflow hidden

    &__gradient
        width 100%
        height 4px
        position absolute
        background linear-gradient(to right, #76bb43 40%, #00ddba 80%)
        top 0
        left 0

    &__title
        margin-bottom 10px

    &__text
        margin-bottom 27px

    &__btn
        font-size-func(12)
        max-width 100%
        min-width 330px
        padding-top 12px
        padding-bottom 12px
