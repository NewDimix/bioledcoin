.message-security
    position relative
    border-radius 5px
    border 1px solid #dddddd
    padding 24px 12px
    overflow hidden

    @media (min-width 550px)
        padding 24px 24px 24px 62px

    &:after
        content ''
        position absolute
        right 7px
        top 23px
        width 29px
        height 26px
        background inline('warning.png') no-repeat

        @media (min-width 550px)
            left 17px
            right inherit

    &__gradient
        width 100%
        height 4px
        position absolute
        background linear-gradient(to right, #76bb43 40%, #00ddba 80%)
        top 0
        left 0

    &__title
        margin-bottom 10px
        font-size-func(18)

    &__text
        margin-bottom 27px
        font-size-func(12)

    &__btn
        font-size-func(12)
        width auto
        padding-top 12px
        padding-bottom 12px

        @media (min-width 550px)
            min-width 330px
