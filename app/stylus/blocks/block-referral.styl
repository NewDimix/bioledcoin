.block-referral
    &__title
        font-size-func(18)
        color $green-color
        font-weight 700
        margin-bottom 20px
        hyphens()

    &__text
        hyphens()
        font-size-func(12)
        color $grey-dark-color
        margin-bottom 20px
        font-weight 300

        p
            &:not(:last-child)
                margin-bottom 20px

    &__link-text
        hyphens()
        font-weight 700
        font-size-func(12)

    &__link
        hyphens()
        {ibm}
        color #007db3
        font-size-func(18)
        font-weight 700
        margin-right 25px
        margin-bottom 25px
        max-width 100%

    &__link-btn
        {ibm}
        padding-top 13px
        padding-bottom 13px
        min-width 195px
        margin-bottom 25px
        max-width 100%

    &__referral-table
        margin-bottom 28px
