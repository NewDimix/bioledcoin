.team-item
    position relative
    text-align center
    margin-bottom 65px
    margin-left auto
    margin-right auto

    @media (min-width 768px)
        {ibt}
        width 45%
        max-width none
        margin-right 4%

    @media (min-width 992px)
        width 32.33%
        margin-right 1.5%

    &:nth-child(2n)
        @media (min-width 768px)
            margin-right 0

        @media (min-width 992px)
            margin-right 1.5%

    &:nth-child(3n)
        @media (min-width 992px)
            margin-right 0

    &:nth-last-child(2)
        margin-bottom 65px

        @media (min-width 768px)
            margin-bottom 0

    &:nth-last-child(3)
        @media (min-width 992px)
            margin-bottom 0

    &:last-child
        margin-bottom 0

        @media (min-width 768px)
            margin-right 0 !important

    &__img
        width 60%
        min-width 300px
        margin-left auto
        margin-right auto
        margin-bottom 20px
        height 220px

        @media (min-width 480px)
            height 260px

        @media (min-width 768px)
            width 100%
            min-width auto
            height 230px

        @media (min-width 1265px)
            height 254px

    &__content
        position relative

        @media (min-width 768px)
            height 255px

    &__name
        margin-bottom 7px
        font-size-func(24)
        hyphens()

    &__post
        font-size-func(14)
        font-style italic
        text-transform uppercase
        margin-bottom 7px
        hyphens()

        @media (min-width 768px)
            font-size-func(16)

    &__text
        font-size-func(14)
        margin-bottom 17px
        hyphens()
        overflow hidden

        @media (min-width 768px)
            font-size-func(16)
            height 75px

    &__social-wrap
        @media (min-width 768px)
            position absolute
            left 0
            right 0
            bottom 0

    &__line
        width 80%
        border-top 1px solid $grey-light-color
        border-bottom none
        margin-bottom 10px

        @media (min-width 768px)
            width 100%

    .mCSB_scrollTools
        width 4px

    .mCS-dark.mCSB_scrollTools .mCSB_dragger .mCSB_dragger_bar
        background-color #849daf
