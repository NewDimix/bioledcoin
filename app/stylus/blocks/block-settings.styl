.block-settings
    padding-bottom 20px

    &__title
        font-size-func(14)
        font-weight 700
        margin-bottom 30px
        hyphens()

        @media (min-width 768px)
            font-size-func(16)

    &__print-wrap
        text-align center
        margin-bottom 65px

        @media (min-width 992px)
            text-align left

    &__qr
        {ibm}
        padding 33px
        border 1px solid $grey-light-color
        margin-right 0
        margin-bottom 20px

        @media (min-width 992px)
            margin-right 10%
            margin-bottom 0

    &__info-wrap
        display block
        max-width none
        font-size-func(14)
        hyphens()

        @media (min-width 768px)
            font-size-func(16)

        @media (min-width 992px)
            {ibm}
            max-width 380px

    &__key-block
        background-color #f8f9fd
        border 1px solid $grey-light-color
        text-align center
        padding 14px 24px
        margin-bottom 11px

    &__print-btn
        width 100%
        padding-top 12px
        padding-bottom 12px
        margin-bottom 11px
        max-width 380px

        @media print
            display none

    &__print-message
        background-color #f8f9fd
        border 1px solid $grey-light-color
        padding 14px 24px

    &__form
        @media print
            display none

        .form__row
            margin-bottom 43px

    &__notice-title
        font-size-func(18)
        color $green-color
        margin-bottom 33px
        text-transform uppercase
        font-weight 700
        hyphens()

        @media print
            display none

    &__notice-text
        font-size-func(14)
        margin-bottom 34px
        max-width 480px
        line-height 1.5
        hyphens()

        @media (min-width 768px)
            font-size-func(16)

        @media print
            display none

    &__btn
        min-width 350px
        padding-top 12px
        padding-bottom 12px

    &_subscribe
        @media print
            display none

