.roadmap
    padding-top 30px
    padding-bottom 5px

    @media (min-width 480px)
        padding-top 38px
        padding-bottom 7px

    @media (min-width 768px)
        padding-top 45px
        padding-bottom 25px
        min-height 576px

    @media (min-width 880px)
        min-height 632px

    @media (min-width 992px)
        padding-top 55px
        padding-bottom 30px
        min-height 793px

    @media (min-width 1265px)
        padding-top 65px
        padding-bottom 49px

    &__title
        hyphens()

        h2
            color #3d5364
            text-align center
            font-weight 300
            font-size-func(35)
            margin-top 0
            margin-bottom 25px

            @media (min-width 480px)
                font-size-func(38)
                margin-bottom 40px

            @media (min-width 768px)
                font-size-func(41)
                margin-bottom 55px

            @media (min-width 992px)
                font-size-func(44)
                margin-bottom 75px

            @media (min-width 1265px)
                font-size-func(48)
                margin-bottom 95px

    &__slider
        position relative

        &:before
            @media (min-width 768px)
                content inline('rectangle2.png')
                position absolute
                left 0
                bottom 0
                transform translate(-290px, 220px)
                z-index 9

        @media (min-width 768px)
            width 60%
            margin-left auto

        @media (min-width 880px)
            width 55%

        @media (min-width 992px)
            width 50%

        .roadmap__roadmap-item, .roadmap-item, .slick-slide, .slick-current, .slick-active
            outline none

    &__dots
        position relative
        z-index 9

        @media (min-width 768px)
            position absolute
            margin-top 0
            top 0
            left -35%
            transform translate(-50%, -73px) scale(.7)
            padding-left 0

        @media (min-width 880px)
            transform translate(-50%, -38px) scale(.85)
            left -42.5%

        @media (min-width 992px)
            transform translateX(-50%)
            left -50%

        li
            width 44px
            height 44px
            position relative
            list-style none
            border-radius 50%
            text-align center

            &:not(:last-child)
                margin-bottom 110px

                &:before
                    content ''
                    position absolute
                    width 14px
                    height 114px
                    top 100%
                    left 50%
                    transform translateX(-50%)
                    margin-top 10px

            &:hover
                cursor pointer

                &:after
                    color #00b7bb

            &:after
                position absolute
                white-space nowrap
                color #3d5364
                transition all .5s ease
                font-weight 300

            &:nth-child(2n)
                &:after
                    right 100%
                    margin-right 40px

            &:nth-child(2n-1)
                &:after
                    left 100%
                    margin-left 40px

            &:first-child
                background-color #00cccf
                border 12px solid #00b7ba

                &:before
                    background linear-gradient(180deg, #00b7ba 10%, #00c1b3 90%)

                &:after
                    content 'Pre-ICO'

            &:nth-child(2)
                background-color #00d5d0
                border 12px solid #00c1b3

                &:before
                    background linear-gradient(180deg, #00c1b3 10%, #00ceab 90%)

                &:after
                    content 'ICO'

            &:nth-child(3)
                background-color #00e4bf
                border 12px solid #00ceab

                &:before
                    background linear-gradient(180deg, #00ceab 10%, #00d8a4 90%)

                &:after
                    content 'Реализация'

            &:last-child
                background-color #00e4bf
                border 12px solid #00d8a4

                &:after
                    content 'Девиденты'

        button
            position absolute
            top 50%
            left 50%
            transform translate(-50%, -50%)
            border-radius 50%
            border none
            background-color transparent
            width 11px
            height 11px
            padding 0
            font-size 0
            transition all .5s ease
            outline none

            &:hover
                cursor pointer

        .slick-active
            &:after
                color #00b7bb
                font-weight 400

            button
                background-color white
                box-shadow 0 0 15px 4px white

    &__arrows
        z-index 9
        position absolute
        background-color transparent
        font-size 0
        height 15px
        width 15px
        top 6px
        border none
        border-left 1px solid rgba(61, 83, 100, 0.8)
        border-top 1px solid rgba(61, 83, 100, 0.8)
        padding 0
        transition all .5s ease

        &:hover
            cursor pointer
            border-color rgba(61, 83, 100, 1)

        &:focus
            outline none

        &_prev
            left 10%
            transform rotate(-45deg)

            &:hover, &:focus
                transform rotate(-45deg) scale(1.2)

        &_next
            right 10%
            transform rotate(135deg)

            &:hover, &:focus
                transform rotate(135deg) scale(1.2)
