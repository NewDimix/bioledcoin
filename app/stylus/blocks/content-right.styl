.content-right
    font-size 0
    padding-bottom 87px
    padding-left 30px
    padding-right 30px

    @media (min-width 768px)
        padding-left 261px

    @media print
        padding-left 30px

    &__balance, &__earn, &__transactions, &__settings, &__bounty
        display none

    &__panel
        text-align right
        margin-bottom 30px
        background-color white
        border-bottom-left-radius 7px
        border-bottom-right-radius 7px
        box-shadow 0 0 15px 0px rgba(0, 0, 0, 0.05)

        @media print
            display none

    &__numbering
        .content-right__block
            &:first-child
                .content-right__block-title
                    &:after
                        content '01.'

            &:nth-child(2)
                .content-right__block-title
                    &:after
                        content '02.'

            &:nth-child(3)
                .content-right__block-title
                    &:after
                        content '03.'

            &:nth-child(4)
                .content-right__block-title
                    &:after
                        content '04.'

            &:nth-child(5)
                .content-right__block-title
                    &:after
                        content '05.'

            &:nth-child(6)
                .content-right__block-title
                    &:after
                        content '06.'

        .content-right__block-title
            padding-left 40px

            &:after
                color $green-color
                font-weight 700
                position absolute
                top 0
                left 0

    &__block
        background-color white
        border-radius 7px
        padding 20px
        box-shadow 0 0 15px 0px rgba(0, 0, 0, 0.05)

        &:not(:last-child)
            margin-bottom 26px

    &__title
        hyphens()

        h2
            margin-top 0
            margin-bottom 18px
            font-weight 400
            font-size-func(24)

        @media print
            display none
