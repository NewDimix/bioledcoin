.content-right
    font-size 0
    padding-bottom 87px
    padding-left 30px
    padding-right 30px

    @media (min-width 768px)
        padding-left 241px

    @media print
        padding-left 30px

    &__balance, &__earn, &__transactions, &__settings
        display none

    &__panel
        text-align right
        border-bottom 1px solid #f0f0f0
        margin-bottom 30px
        margin-left -40px
        margin-right -40px

        @media print
            display none

    &__title
        hyphens()

        h2
            margin-top 0
            margin-bottom 18px
            font-weight 400
            font-size-func(24)

        @media print
            display none

    &__block
        background-color white
        border-radius 7px
        padding 20px
        box-shadow 0 0 15px 0px rgba(0, 0, 0, 0.05)

        &:not(:last-child)
            margin-bottom 26px
