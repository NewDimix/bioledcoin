.slider-videos
    &__videos-item
        display block
        position relative
        height 154px
        overflow hidden
        background-color white
        width 260px
        transition all 1s ease

        @media (min-width 480px)
            height 237px
            width 400px

        @media (min-width 590px)
            height 237px

        @media (min-width 690px)
            margin-right 40px
            height 326px
            width 550px

        @media (min-width 1285px)
            height 222px
            width 375px

        @media (max-width 1284px)
            opacity .5
            transform scale(.9)

        &:focus
            outline none

        &.slick-current
            opacity 1
            transform scale(1)

    &__video-wrap
        position relative
        height 0
        padding-bottom 59.25%
        padding-top 0px

        iframe
            position absolute
            top 0
            left 0
            width 100%
            height 100%
