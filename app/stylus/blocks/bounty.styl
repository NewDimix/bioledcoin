.bounty
    padding-top 30px
    padding-bottom 35px

    @media (min-width 480px)
        padding-top 38px
        padding-bottom 45px

    @media (min-width 768px)
        padding-top 45px
        padding-bottom 65px

    @media (min-width 992px)
        padding-top 55px
        padding-bottom 85px

    @media (min-width 1265px)
        padding-top 65px
        padding-bottom 114px

    &__title
        h2
            color #3d5364
            text-align center
            font-weight 300
            font-size-func(35)
            margin-top 0
            margin-bottom 25px

            @media (min-width 480px)
                font-size-func(38)
                margin-bottom 40px

            @media (min-width 768px)
                font-size-func(41)
                margin-bottom 55px

            @media (min-width 992px)
                font-size-func(44)
                margin-bottom 75px

            @media (min-width 1265px)
                font-size-func(48)
                margin-bottom 95px
