.bounty
    padding-top 30px
    clearfix()

    @media (min-width 480px)
        padding-top 38px

    @media (min-width 768px)
        padding-top 45px

    @media (min-width 992px)
        padding-top 55px

    @media (min-width 1265px)
        padding-top 65px

    &__title
        hyphens()

        h2
            text-align center
            font-weight 300
            font-size-func(35)
            margin-top 0
            margin-bottom 24px

            @media (min-width 480px)
                font-size-func(38)
                margin-bottom 28px

            @media (min-width 768px)
                font-size-func(41)
                margin-bottom 32px

            @media (min-width 992px)
                font-size-func(44)
                margin-bottom 36px

            @media (min-width 1265px)
                font-size-func(48)
                margin-bottom 40px

    &__img
        margin-bottom 25px
        max-width 400px
        margin-left auto
        margin-right auto
        position relative

        @media (min-width 768px)
            float left
            max-width 50%
            margin-right 5%

        img
            display block
            width 100%

    &__content
        text-align center

    &__subtitle
        margin-bottom 20px

        @media (min-width 768px)
            margin-bottom 40px
            text-align left

        h3
            font-weight 400
            margin-top 0
            margin-bottom 0
            margin-top 0
            margin-bottom 0
            font-size-func(24)
            hyphens()

    &__text
        font-size-func(14)
        line-height 2em
        margin-bottom 20px
        position relative
        hyphens()

        @media (min-width 480px)
            margin-bottom 25px

        @media (min-width 768px)
            margin-bottom 30px
            text-align left

        @media (min-width 992px)
            margin-bottom 35px

        @media (min-width 1265px)
            margin-bottom 40px

    &__link
        min-width 220px
        max-width 330px

.remodal-close
    left inherit
    right 0
