.social
    padding-left 0
    list-style none
    font-size 0
    margin-top 0
    margin-bottom 0

    li
        {ibm}
        position relative
        transition all .1s ease

        &:not(:last-child)
            margin-right 20px

        &:after
            content ''
            position absolute
            width 100%
            height 3px
            background-color transparent
            top 100%
            left 0
            transition all .1s ease

        &:hover
            .social__item
                transform translateY(-5px)

            &:after
                background-color white

    &__item
        {ibm}
        width 31px
        height 28px
        background-position center
        background-repeat no-repeat
        transition all .1s ease

        &:focus
            outline 1px solid white

        &_linkedin
            background-image inline('linkedin.png')

        &_facebook
            background-image inline('facebook.png')

        &_instagram
            background-image inline('instagram.png')

        &_vkontakte
            background-image inline('vkontakte.png')

        &_youtube
            background-image inline('youtube.png')

    &_grey
        li
            &:hover
                &:after
                    background-color #b9b9b9

        .social__item
            &:focus
                outline 1px solid #b9b9b9

            &_linkedin
                background-image inline('linkedin-grey.png')

            &_facebook
                background-image inline('facebook-grey.png')

            &_instagram
                background-image inline('instagram-grey.png')

            &_vkontakte
                background-image inline('vkontakte-grey.png')

            &_youtube
                background-image inline('youtube-grey.png')

    &_circle
        li
            &:after
                display none

            &:hover
                .social__item
                    transform translateY(0)
                    background-color #a7a7a7

        .social__item
            border-radius 50%
            background-color #c8ccce
            width 30px
            height 30px
            background-size 60%
            transition all .3s ease

            &:focus
                outline none
                background-color #b9b9b9

            &_linkedin
                background-size 50%

            &_facebook
                background-size 35%
