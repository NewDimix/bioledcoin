.text-block
    color white
    margin-bottom 25px
    text-align center

    @media (min-width 480px)
        margin-bottom 40px

    @media (min-width 768px)
        margin-bottom 50px

    @media (min-width 992px)
        padding-top 75px
        text-align left

    @media (min-width 1275px)
        padding-top 5px

    &__title
        font-size-func(40)
        margin-top 0
        margin-bottom 10px
        font-weight 400
        hyphens()

        @media (min-width 480px)
            font-size-func(50)
            margin-bottom 20px

        @media (min-width 768px)
            font-size-func(65)
            margin-bottom 30px

        @media (min-width 1265px)
            font-size-func(88)
            margin-bottom 55px

    &__subtitle
        font-size-func(14)
        line-height 1.6em
        margin-bottom 20px
        hyphens()

        @media (min-width 768px)
            font-size-func(16)
            margin-bottom 30px

        @media (min-width 1265px)
            font-size-func(18)
            margin-bottom 60px

    &__links-wrap
        padding-left 0
        list-style none
        margin-top 0
        margin-bottom 20px

        li
            margin-left 0
            margin-right 0
            margin-bottom 10px

            @media (min-width 480px)
                {ibm}

            &:not(:last-child)
                @media (min-width 480px)
                    margin-right 10px

                @media (min-width 1265px)
                    margin-right 20px

    &__link
        {ibm}
        text-transform uppercase
        color white
        text-decoration none
        font-weight 700
        font-size-func(14)
        padding 8px 10px
        border 2px solid white
        border-radius 100px
        min-width 150px
        max-width 190px
        transition all .15s ease
        text-align center
        ellipsis()

        @media (min-width 768px)
            padding 16px 10px

        @media (min-width 992px)
            padding 8px 10px
            width 150px

        @media (min-width 1265px)
            padding 16px 10px
            width 190px

        &:hover
            color $dark-color
            background-color white

        &:focus
            outline none
            background-color rgba(255, 255, 255, 0.3)

        &:active
            transform scale(.95)
