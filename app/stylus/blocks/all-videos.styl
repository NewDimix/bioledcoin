.all-videos
    text-align center

    &__videos-item
        position relative
        display block
        overflow hidden
        transition all 1s ease
        margin-bottom 35px
        height 154px
        width 260px
        margin-left auto
        margin-right auto

        @media (max-width: 1284px)
            opacity 1

        @media (min-width 480px)
            height 221px
            width 375px

        @media (min-width 850px)
            {ibt}
            margin-right 40px

        &:nth-child(2n)
            @media (min-width 850px) and (max-width 1264px)
                margin-right 0

        &:nth-child(3n)
            @media (min-width 1265px)
                margin-right 0

        &:last-child
            @media (min-width 850px)
                margin-right 0

        &:focus
            outline none

    &__video-wrap
        padding-bottom 59.25%
        padding-top 0px
        position relative
        height 0

        iframe
            position absolute
            top 0
            left 0
            width 100%
            height 100%
