.block-purse
    text-align center
    padding-bottom 33px

    @media (min-width 768px)
        text-align left

    &__title
        position relative
        margin-bottom 38px
        font-size-func(16)
        text-align left
        hyphens()

    &__number
        font-size-func(12)
        margin-bottom 20px

        p
            &:first-child
                font-weight 700
                margin-bottom 5px

    &__btn
        margin-bottom 30px

        input
            padding-top 15px
            padding-bottom 15px

    &__qr
        {ibm}
        padding 33px
        border 1px solid $grey-light-color
