.stages
    background-color white
    color $black-color
    border-radius 5px
    font-size 0
    padding 16px 12.5px
    max-width 300px

    @media (min-width 400px)
        max-width 380px

    @media (min-width 480px)
        padding 32px 25px
        max-width 455px

    &__title
        text-align center
        font-size-func(28)
        font-weight 300
        margin-bottom 10px

        @media (min-width 480px)
            {ibb}
            width 50%
            text-align left
            margin-bottom 40px

    &__rate
        text-align center
        font-size-func(20)
        font-weight 900
        margin-bottom 30px

        @media (min-width 480px)
            {ibb}
            width 50%
            text-align right
            margin-bottom 40px

    &__progress
        margin-bottom 30px

        @media (min-width 480px)
            margin-bottom 40px

    &__date
        margin-bottom 43px

        @media (min-width 480px)
            margin-bottom 63px

    &__buy
        display block
        margin-left auto
        margin-right auto
        text-transform uppercase
        color white
        background-color #00d08e
        text-decoration none
        font-weight 700
        font-size-func(14)
        padding 16px 0
        border-radius 100px
        text-align center
        width 190px
        transition all .15s ease

        @media (min-width 992px)
            {ibm}

        &:hover
            background-color rgba(0, 208, 142, 0.7)
