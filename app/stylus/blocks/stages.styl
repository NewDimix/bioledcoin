.stages
    position relative
    background-color white
    color $black-color
    border-radius 5px
    font-size 0
    padding 16px 12.5px
    max-width 300px

    @media (min-width 400px)
        max-width 380px

    @media (min-width 480px)
        padding 32px 25px
        max-width 455px

    @media (min-width 992px)
        &:before, &:after
            content ''
            position absolute

        &:before
            left -50px
            top -40px
            width 23px
            height 425px
            background-image inline('diodes-left.png')

        &:after
            left -34px
            top -40px
            width 537px
            height 22px
            background-image inline('diodes-top.png')

    @media (min-width 1265px)
        &:before
            left -70px
            top -60px

        &:after
            left -54px
            top -60px

    &__title
        text-align center
        font-size-func(28)
        font-weight 300
        margin-bottom 10px
        ellipsis()

        @media (min-width 480px)
            {ibb}
            width 50%
            text-align left
            margin-bottom 40px

    &__rate
        text-align center
        font-size-func(20)
        font-weight 900
        margin-bottom 30px
        ellipsis()

        @media (min-width 480px)
            {ibb}
            width 50%
            text-align right
            margin-bottom 40px

    &__progress
        margin-bottom 30px

        @media (min-width 480px)
            margin-bottom 40px

    &__date
        margin-bottom 43px

        @media (min-width 480px)
            margin-bottom 63px

    &__buy
        display block
        margin-left auto
        margin-right auto
        width 190px
        min-width 190px
        max-width 100%

        @media (min-width 992px)
            {ibm}
