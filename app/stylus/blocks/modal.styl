.remodal
    width 100%
    max-width 542px
    margin-left 0
    margin-right 0
    text-align left
    padding 40px 50px
    color #3d5364

.modal
    &__title
        margin-bottom 35px

        h3
            margin-top 0
            margin-bottom 0
            font-size-func(25)
            font-weight 400

    &__row
        display block
        text-align left
        margin-bottom 18px
        font-size-func(12)

        p
            margin-bottom 8px
            font-weight 700

        span
            color #9ea9b1
            font-style italic

        input
            width 100%
            padding 12px
            color #3d5364

            &:focus
                outline-color #00d08e

        &_many-items
            font-size 0
            margin-bottom 3px

            input
                opacity 0
                position absolute

                & + label
                    {ibt}
                    font-size-func(12)
                    cursor pointer
                    border 1px solid #dddddd
                    width 17.6%
                    margin-right 3%
                    padding 12px 0
                    margin-bottom 15px
                    text-align center
                    color #9ea9b1
                    transition all .3s ease

                    &:nth-of-type(5n)
                        margin-right 0

                &:checked + label
                    border 1px solid #00d08e
                    outline 1px solid #00d08e
                    color #3d5364

                &:focus + label
                    outline 1px solid #00d08e

        &_two-items
            font-size 0

            label
                {ibt}
                width 58.8%
                margin-right 3%
                font-size-func(12)

            select
                {ibb}
                width 38.2%
                font-size-func(12)

                &:focus
                    outline-color #00d08e
