.news
    font-size 0
    position relative

    .section__title
        color white

    .container
        margin-bottom 18px
        padding-left 30px
        padding-right 30px

        @media (min-width 480px)
            margin-bottom 28px

        @media (min-width 768px)
            margin-bottom 32px

        @media (min-width 992px)
            margin-bottom 38px

        @media (min-width 1265px)
            margin-bottom 40px

    &__arrows
        position absolute
        background-color transparent
        font-size 0
        height 20px
        width 20px
        top 47.8%
        border none
        border-left 2px solid rgba(255, 255, 255, .8)
        border-top 2px solid rgba(255, 255, 255, .8)
        padding 0
        transition all .5s ease

        @media (min-width 1370px)
            height 30px
            width 30px
            top 47.5%

        &:hover
            cursor pointer
            border-color rgba(255, 255, 255, 1)

        &:focus
            outline none
            border-color rgba(255, 255, 255, 1)

        &_prev
            left -20px
            transform rotate(-45deg)

            @media (min-width 1370px)
                left -50px

            &:hover, &:focus
                transform rotate(-45deg) scale(1.25)

            &.slick-disabled
                &:hover, &:focus
                    transform rotate(-45deg) scale(1)

        &_next
            right -20px
            transform rotate(135deg)

            @media (min-width 1370px)
                right -50px

            &:hover, &:focus
                transform rotate(135deg) scale(1.25)

            &.slick-disabled
                &:hover, &:focus
                    transform rotate(135deg) scale(1)

        &.slick-disabled
            border-color rgba(255, 255, 255, 0.25)

    &__part
        width 582px
        margin-right 40px
        transition all 1s ease

        @media (max-width 669px)
            margin-right 0

        @media (max-width 900px)
            opacity 0

        @media (max-width 1284px)
            opacity .5
            transform scale(.9)

        &:focus
            outline none

        &.slick-current
            opacity 1
            transform scale(1)

    &__more
        text-align center
        hyphens()
        margin-left auto
        margin-right auto

        a
            {ibt}
            font-size-func(24)
            color white
            font-weight 300
            text-decoration underline
            opacity .8
            transition all .1s ease
            padding 10px 20px
            border-radius 30px
            border 2px solid transparent
            transition all .5s ease
            font-family GothamPro

            &:focus
                outline none
                border 2px solid rgba(255, 255, 255, 0.8)
                text-decoration none

            &:hover
                opacity 1
