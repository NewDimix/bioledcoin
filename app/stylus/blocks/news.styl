.news
    padding-top 30px
    padding-bottom 35px
    background-image url(../img/news-bg.jpg)
    background-size cover
    font-size 0

    @media (min-width 480px)
        padding-top 38px
        padding-bottom 40px

    @media (min-width 768px)
        padding-top 45px
        padding-bottom 60px

    @media (min-width 992px)
        padding-top 55px
        padding-bottom 80px

    @media (min-width 1265px)
        padding-top 65px
        padding-bottom 102px

    &__title
        h2
            color white
            text-align center
            font-weight 300
            font-size-func(35)
            margin-top 0
            margin-bottom 25px

            @media (min-width 480px)
                font-size-func(38)
                margin-bottom 35px

            @media (min-width 768px)
                font-size-func(41)
                margin-bottom 45px

            @media (min-width 992px)
                font-size-func(44)
                margin-bottom 55px

            @media (min-width 1265px)
                font-size-func(48)
                margin-bottom 70px

    .container
        margin-bottom 18px
        padding-left 30px
        padding-right 30px

        @media (min-width 480px)
            margin-bottom 28px

        @media (min-width 768px)
            margin-bottom 32px

        @media (min-width 992px)
            margin-bottom 38px

        @media (min-width 1265px)
            margin-bottom 40px

    &__arrows
        position absolute
        background-color transparent
        font-size 0
        height 20px
        width 20px
        top 47.8%
        border none
        border-left 2px solid rgba(255, 255, 255, .8)
        border-top 2px solid rgba(255, 255, 255, .8)
        padding 0
        transition transform .5s ease

        @media (min-width 1370px)
            height 30px
            width 30px
            top 47.5%

        &:hover
            cursor pointer
            border-color rgba(255, 255, 255, 1)

        &:focus
            outline none
            border-width 4px

        &_prev
            left -20px
            transform rotate(-45deg)

            @media (min-width 1370px)
                left -50px

            &:hover
                transform rotate(-45deg) scale(1.15)

        &_next
            right -20px
            transform rotate(135deg)

            @media (min-width 1370px)
                right -50px

            &:hover
                transform rotate(135deg) scale(1.15)

        &.slick-disabled
            border-color transparent

    &__path
        width 582.5px
        margin-right 40px
        transition all 1s ease

        @media (max-width 669px)
            margin-right 0

        @media (max-width 1245px)
            opacity .5

        &:focus
            outline none

        &.slick-current
            opacity 1

    &__row
        margin-bottom 15px

        @media (min-width 400px)
            margin-bottom 25px

        @media (min-width 590px)
            margin-bottom 35px

        @media (min-width 768px)
            margin-bottom 40px

        @media (min-width 992px)
            margin-bottom 45px

        &:last-child
            margin-bottom 0

    &__more
        text-align center

        a
            font-size-func(24)
            color white
            font-weight 300
            text-decoration none
            border-bottom 1px solid white
            padding-bottom 5px

            &:focus
                outline-color white
