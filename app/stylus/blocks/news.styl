.news
    padding-top 30px
    padding-bottom 35px
    background-image url(../img/news-bg.jpg)
    background-size cover
    font-size 0

    @media (min-width 480px)
        padding-top 38px
        padding-bottom 40px

    @media (min-width 768px)
        padding-top 45px
        padding-bottom 60px

    @media (min-width 992px)
        padding-top 55px
        padding-bottom 80px

    @media (min-width 1265px)
        padding-top 65px
        padding-bottom 102px

    &__title
        hyphens()

        h2
            color white
            text-align center
            font-weight 300
            font-size-func(35)
            margin-top 0
            margin-bottom 25px

            @media (min-width 480px)
                font-size-func(38)
                margin-bottom 35px

            @media (min-width 768px)
                font-size-func(41)
                margin-bottom 45px

            @media (min-width 992px)
                font-size-func(44)
                margin-bottom 55px

            @media (min-width 1265px)
                font-size-func(48)
                margin-bottom 70px

    .container
        margin-bottom 18px
        padding-left 30px
        padding-right 30px

        @media (min-width 480px)
            margin-bottom 28px

        @media (min-width 768px)
            margin-bottom 32px

        @media (min-width 992px)
            margin-bottom 38px

        @media (min-width 1265px)
            margin-bottom 40px

    &__arrows
        position absolute
        background-color transparent
        font-size 0
        height 20px
        width 20px
        top 47.8%
        border none
        border-left 2px solid rgba(255, 255, 255, .8)
        border-top 2px solid rgba(255, 255, 255, .8)
        padding 0
        transition all .5s ease

        @media (min-width 1370px)
            height 30px
            width 30px
            top 47.5%

        &:hover
            cursor pointer
            border-color rgba(255, 255, 255, 1)

        &:focus
            outline none
            border-color rgba(255, 255, 255, 1)

        &_prev
            left -20px
            transform rotate(-45deg)

            @media (min-width 1370px)
                left -50px

            &:hover, &:focus
                transform rotate(-45deg) scale(1.25)

            &.slick-disabled
                &:hover, &:focus
                    transform rotate(-45deg) scale(1)

        &_next
            right -20px
            transform rotate(135deg)

            @media (min-width 1370px)
                right -50px

            &:hover, &:focus
                transform rotate(135deg) scale(1.25)

            &.slick-disabled
                &:hover, &:focus
                    transform rotate(135deg) scale(1)

        &.slick-disabled
            border-color rgba(255, 255, 255, 0.25)

    &__part
        width 582px
        margin-right 40px
        transition all 1s ease

        @media (max-width 669px)
            margin-right 0

        @media (max-width 1284px)
            opacity .5
            transform scale(.9)

        &:focus
            outline none

        &.slick-current
            opacity 1
            transform scale(1)

    &__more
        text-align center
        hyphens()
        max-width 80%
        margin-left auto
        margin-right auto

        a
            font-size-func(24)
            color white
            font-weight 300
            text-decoration none
            border-bottom 1px solid rgba(255, 255, 255, 0.8)
            padding-bottom 5px
            opacity .8
            transition all .1s ease

            &:focus
                outline-color white

            &:hover
                opacity 1
                border-bottom 1px solid white

