.panel
    {ibm}
    text-align right

    &__language
        {ibm}
        position relative
        background none
        border none
        font-size-func(14)

        &:after
            content ''
            position absolute
            right 11px
            top 55%
            transform translateY(-50%)
            border 4px solid transparent

        &:focus
            outline none

        &_open
            border-bottom-left-radius 0
            border-bottom-right-radius 0

    &__language-btn
        font-size-func(14)
        text-transform uppercase
        font-weight 700

        &:hover
            cursor pointer

    &__login
        {ibm}
        text-transform uppercase
        color white
        text-decoration none
        font-weight 700
        font-size-func(14)
        padding 8px 10px
        min-width 125px
        max-width 125px
        text-align center
        border 2px solid white
        border-radius 100px
        transition all .15s ease
        background none
        ellipsis()

        @media (min-width 480px)
            max-width 200px

        @media (min-width 768px)
            min-width 191px
            max-width 400px
            padding-top 16px
            padding-bottom 16px

        @media (min-width 992px)
            max-width 650px

        @media (min-width 1265px)
            max-width 800px

        &:focus
            outline none
            background-color rgba(255, 255, 255, 0.3)

        &:hover
            color #3d5364
            background-color white
            cursor pointer

        &:active
            transform scale(.95)

    &__user
        {ibm}
        position relative
        background none
        border none

        &:after
            content ''
            position absolute
            right 16px
            top 50%
            transform translateY(-50%)
            border 4px solid transparent

        &:hover
            cursor pointer

        &:focus
            outline none

    &__nickname
        {ibm}
        font-size-func(18)
        margin-right 18px
        color white

    &__avatar
        {ibm}

        img
            display block
            border-radius 50%

    &__menu
        display none
        width 100%
        text-align left
        position absolute
        left 0
        top 100%
        margin-top 0
        padding-left 0
        list-style none
        font-size-func(24)

        a
            display block

    &_light
        .panel
            &__language
                border-radius 5px
                margin-right 10px

                &:after
                    border-top-color white

                &:hover
                    background-color white

                    &:after
                        border-top-color #3d5364

                    .panel__language-btn
                        color #3d5364

                &_open
                    background-color white
                    border-radius 5px
                    border-bottom-left-radius 0
                    border-bottom-right-radius 0

                    &:after
                        border-top-color #3d5364

                    .panel__language-btn
                        color #3d5364

            &__language-btn
                color white
                padding 14px 20px 13px 10px

            &__user
                border-radius 5px
                padding 7px 40px 7px 20px

                &:after
                    border-top-color rgba(255, 255, 255, 0.6)

                &:hover
                    background-color white

                    &:after
                        border-top-color #3d5364

                    .panel__nickname
                        color #3d5364

                &_open
                    background-color white
                    border-radius 5px
                    border-bottom-left-radius 0
                    border-bottom-right-radius 0

                    &:after
                        border-top-color #3d5364

                    .panel__nickname
                        color #3d5364

            &__menu
                background-color white
                font-size-func(14)
                z-index 10
                border-top 1px solid rgba(61, 83, 100, 0.2)
                border-bottom-left-radius 5px
                border-bottom-right-radius 5px
                box-shadow 0 3px 20px 0px rgba(0, 0, 0, 0.2)

                li
                    &:last-child
                        border-bottom-left-radius 5px
                        border-bottom-right-radius 5px

                    &:hover
                        background-color rgb(237, 244, 231)

                a
                    padding 10px 0 10px 20px
                    text-decoration none
                    color #3d5364
                    font-weight 700

            &__nickname
                color white

    &_dark
        .panel
            &__language
                margin-right 1px

                &:after
                    border-top-color #3d5364

                &:before
                    content ''
                    width 1px
                    background-color #f0f0f0
                    height 68px
                    position absolute
                    right -1px

                &:hover
                    background-color rgba(61, 83, 100, 0.1)

                &_open
                    background-color rgba(61, 83, 100, 0.1)

            &__language-btn
                color #3d5364
                padding 24px 20px 25px 10px

            &__user
                padding 17px 40px 17px 20px

                &:after
                    border-top-color rgba(61, 83, 100, 0.6)

                &:hover
                    background-color rgba(61, 83, 100, 0.1)

                    &:after
                        border-top-color rgba(61, 83, 100, 1)

                &_open
                    background-color rgba(61, 83, 100, 0.1)

                    &:after
                        border-top-color rgba(61, 83, 100, 1)

                    .panel__nickname
                        color #3d5364

            &__nickname
                color #3d5364

            &__menu
                background-color rgb(227, 233, 239)
                font-size-func(14)
                font-weight 700
                z-index 10
                border-top 1px solid #f0f0f0

                li
                    &:hover
                        background-color rgba(255, 255, 255, 0.3)

                a
                    padding 10px 0 10px 20px
                    text-decoration none
                    color #3d5364
