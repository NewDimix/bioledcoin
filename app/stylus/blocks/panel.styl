.panel
    {ibm}
    text-align right

    .jq-selectbox
        {ibm}
        margin-right 10px
        min-width 61px
        max-width 61px

        @media (min-width 480px)
            max-width 120px

        @media (min-width 768px)
            max-width 150px

        &.focused
            border-bottom 0

            .jq-selectbox__select
                border none

        &.opened
            .jq-selectbox__select
                color #3d5364

            .jq-selectbox__trigger-arrow
                border-top-color #3d5364

        select
            width 0

        &__select
            background transparent
            text-shadow none
            box-shadow none
            border none
            text-transform uppercase

        &__trigger
            border-left none
            width 20px

        &__trigger-arrow
            border-width 4px
            top 50%
            left none
            right 0
            transform translate(-4px, -2px)

        &__dropdown
            margin 0
            left 0
            box-shadow none
            border none
            font-family GothamPro, arial, verdana, sans-serif

        li
            padding 7px 0
            text-align center
            transition all .1s ease

            &:hover
                background-color rgba(0, 208, 142, 0.4)
                color black

            &.selected
                background-color inherit
                color inherit

                &:hover
                    background-color rgba(0, 208, 142, 0.5)

    &__login
        {ibm}
        text-transform uppercase
        color white
        text-decoration none
        font-weight 700
        font-size-func(14)
        padding 8px 10px
        min-width 125px
        max-width 125px
        text-align center
        border 2px solid white
        border-radius 100px
        transition all .15s ease
        background none
        ellipsis()

        @media (min-width 480px)
            max-width 200px

        @media (min-width 768px)
            min-width 191px
            max-width 400px
            padding-top 16px
            padding-bottom 16px

        @media (min-width 992px)
            max-width 650px

        @media (min-width 1265px)
            max-width 800px

        &:focus
            outline none
            background-color rgba(255, 255, 255, 0.3)

        &:hover
            color #3d5364
            background-color white
            cursor pointer

        &:active
            transform scale(.95)

    &__user
        {ibm}
        position relative
        padding 13px 40px 10px 20px
        background none
        border none

        &:after
            content ''
            position absolute
            right 16px
            top 50%
            transform translateY(-50%)
            border 4px solid transparent

        &:hover
            cursor pointer

    &__nickname
        {ibm}
        font-size-func(18)
        margin-right 18px
        color white

    &__avatar
        {ibm}

        img
            display block
            border-radius 50%

    &__menu
        display none
        width 100%
        text-align left
        position absolute
        left 0
        top 100%
        margin-top 0
        padding-left 0
        list-style none
        font-size-func(24)

        a
            display block

    &_light
        .panel
            &__user
                border-radius 10px

                &:after
                    border-top-color rgba(255, 255, 255, 0.6)

                &:hover
                    background-color white

                    &:after
                        border-top-color #3d5364

                    .panel__nickname
                        color #3d5364

                &_open
                    background-color white
                    border-bottom-left-radius 0
                    border-bottom-right-radius 0

                    &:after
                        border-top-color #3d5364

                    .panel__nickname
                        color #3d5364

            &__menu
                background-color white
                font-size-func(18)
                z-index 10

                li
                    &:last-child
                        border-bottom-left-radius 10px
                        border-bottom-right-radius 10px

                a
                    padding 10px 0 10px 20px

            &__nickname
                color white

        .jq-selectbox
            border-radius 10px

            &:hover
                background-color white

                .jq-selectbox__select
                    color #3d5364

                .jq-selectbox__trigger-arrow
                    border-top-color #3d5364

            &.opened
                background-color white
                border-bottom-left-radius 0
                border-bottom-right-radius 0

            &__select
                color white
                font-weight 700
                font-size-func(14)
                padding-left 0
                padding-right 20px

            &__trigger-arrow
                border-top-color rgba(255, 255, 255, 0.6)

            &__dropdown
                border-top-left-radius 0
                border-top-right-radius 0
                border-bottom-left-radius 10px
                border-bottom-right-radius 10px

                li
                    border-top 1px solid rgba(61, 83, 100, 0.2)

                    &:first-child
                        border-top-color rgba(61, 83, 100, 0.5)

    &_dark
        font-size 0

        .panel
            &__user
                border-left 1px solid #f0f0f0

                &:after
                    border-top-color rgba(61, 83, 100, 0.6)

                &:hover
                    background-color #ededed

                    &:after
                        border-top-color rgba(61, 83, 100, 1)

                &_open
                    background-color #ededed

                    &:after
                        border-top-color rgba(61, 83, 100, 1)

                    .panel__nickname
                        color #3d5364

            &__nickname
                color #3d5364

            &__menu
                background-color #ededed
                font-size-func(18)
                z-index 10
                border-left 1px solid #ededed

                a
                    padding 10px 0 10px 20px

        .jq-selectbox
            {ibt}
            margin-right 0

            &:hover
                background-color #ededed

                .jq-selectbox__select
                    color #3d5364

                .jq-selectbox__trigger-arrow
                    border-top-color #3d5364

            &.opened
                background-color #ededed

            &__select
                color #3d5364
                font-weight 400
                font-size-func(18)
                height 56px
                padding-top 13px
                padding-right 40px
                padding-left 20px

            &__trigger-arrow
                border-top-color rgba(61, 83, 100, 0.6)
                right 12px

            &__dropdown
                top 56px !important
                background-color #ededed
                border-radius 0


    &_authorized
        .panel__login
            display none

        .panel__user
            {ibm}

    &_not-authorized
        .panel__login
            {ibm}

        .panel__user
            display none
