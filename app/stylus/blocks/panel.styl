.panel
    {ibm}
    text-align right

    &__langauge
        {ibm}
        position relative
        background none
        border none
        margin-right 10px
        font-size-func(14)

        &:after
            content ''
            position absolute
            right 11px
            top 55%
            transform translateY(-50%)
            border 4px solid transparent

        &_open
            border-bottom-left-radius 0
            border-bottom-right-radius 0

    &__langauge-btn
        font-size-func(14)
        text-transform uppercase
        font-weight 700
        padding 13px 20px 10px 10px

        &:hover
            cursor pointer

    &__login
        {ibm}
        text-transform uppercase
        color white
        text-decoration none
        font-weight 700
        font-size-func(14)
        padding 8px 10px
        min-width 125px
        max-width 125px
        text-align center
        border 2px solid white
        border-radius 100px
        transition all .15s ease
        background none
        ellipsis()

        @media (min-width 480px)
            max-width 200px

        @media (min-width 768px)
            min-width 191px
            max-width 400px
            padding-top 16px
            padding-bottom 16px

        @media (min-width 992px)
            max-width 650px

        @media (min-width 1265px)
            max-width 800px

        &:focus
            outline none
            background-color rgba(255, 255, 255, 0.3)

        &:hover
            color #3d5364
            background-color white
            cursor pointer

        &:active
            transform scale(.95)

    &__user
        {ibm}
        position relative
        padding 13px 40px 10px 20px
        background none
        border none

        &:after
            content ''
            position absolute
            right 16px
            top 50%
            transform translateY(-50%)
            border 4px solid transparent

        &:hover
            cursor pointer

    &__nickname
        {ibm}
        font-size-func(18)
        margin-right 18px
        color white

    &__avatar
        {ibm}

        img
            display block
            border-radius 50%

    &__menu
        display none
        width 100%
        text-align left
        position absolute
        left 0
        top 100%
        margin-top 0
        padding-left 0
        list-style none
        font-size-func(24)

        a
            display block

    &_light
        .panel
            &__langauge
                &:after
                    border-top-color white

                &_open
                    background-color white

                    &:after
                        border-top-color #3d5364

                    .panel__langauge-btn
                        color #3d5364

            &__langauge-btn
                color white

            &__user
                border-radius 10px

                &:after
                    border-top-color rgba(255, 255, 255, 0.6)

                &:hover
                    background-color white

                    &:after
                        border-top-color #3d5364

                    .panel__nickname
                        color #3d5364

                &_open
                    background-color white
                    border-bottom-left-radius 0
                    border-bottom-right-radius 0

                    &:after
                        border-top-color #3d5364

                    .panel__nickname
                        color #3d5364

            &__menu
                background-color white
                font-size-func(18)
                z-index 10

                li
                    &:last-child
                        border-bottom-left-radius 10px
                        border-bottom-right-radius 10px

                a
                    padding 10px 0 10px 20px

            &__nickname
                color white

    &_dark
        font-size 0

        .panel
            &__langauge
                &:after
                    border-top-color #3d5364

                &_open
                    background-color #3d5364

                    &:after
                        border-top-color white

                    .panel__langauge-btn
                        color white

            &__langauge-btn
                color #3d5364

            &__user
                border-left 1px solid #f0f0f0

                &:after
                    border-top-color rgba(61, 83, 100, 0.6)

                &:hover
                    background-color #ededed

                    &:after
                        border-top-color rgba(61, 83, 100, 1)

                &_open
                    background-color #ededed

                    &:after
                        border-top-color rgba(61, 83, 100, 1)

                    .panel__nickname
                        color #3d5364

            &__nickname
                color #3d5364

            &__menu
                background-color #ededed
                font-size-func(18)
                z-index 10
                border-left 1px solid #ededed

                a
                    padding 10px 0 10px 20px
