.product
    padding-top 15px
    font-size 0
    overflow hidden
    margin-bottom 50px

    @media (min-width 480px)
        padding-top 19px

    @media (min-width 700px)
        margin-bottom 0

    @media (min-width 768px)
        padding-top 22px

    @media (min-width 992px)
        padding-top 27px

    @media (min-width 1265px)
        padding-top 32px

    &__title
        hyphens()
        position relative
        z-index 1

        h2
            text-align center
            font-weight 300
            font-size-func(35)
            margin-top 0
            margin-bottom 25px

            @media (min-width 480px)
                font-size-func(38)
                margin-bottom 40px

            @media (min-width 768px)
                font-size-func(41)
                margin-bottom 50px

            @media (min-width 992px)
                font-size-func(44)
                margin-bottom 60px

            @media (min-width 1265px)
                font-size-func(48)
                margin-bottom 78px

    &__text
        font-size-func(14)
        line-height 24px
        line-height 2.4rem
        max-width 835px
        margin-left auto
        margin-right auto
        text-align justify
        position relative
        z-index 1
        text-align center

        @media (min-width 768px)
            text-align left

        p
            margin-bottom 25px

        ul
            padding-left 15px
            list-style circle

    &__list
        position relative
        padding-bottom 280px
        height 1020px

        @media (min-width 700px)
            height (1075/1.6)px
            padding-top (160/1.6)px
            margin-top (-170/1.6)px
            padding-bottom 0

        @media (min-width 768px)
            height (1075/1.4)px
            padding-top (160/1.4)px
            margin-top (-170/1.4)px

        @media (min-width 992px)
            height (1075/1.15)px
            padding-top (160/1.15)px
            margin-top (-170/1.15)px

        @media (min-width 1100px)
            padding-top 160px
            height 1075px
            margin-top -170px

        ul
            font-size-func(27/1.6)
            margin-top 60px
            padding-left 0
            list-style none
            position relative
            text-align center

            @media (min-width 768px)
                font-size-func(27/1.4)

            @media (min-width 992px)
                font-size-func(27/1.15)

            @media (min-width 1100px)
                font-size-func(27)

            &>br
                display none

                @media (min-width 700px)
                    display block

        li
            padding (14/1.6)px (20/1.6)px
            border 1px solid #5fc79c
            border-radius 10px
            text-align center
            position relative
            width (300/1.6)px
            margin-bottom 20px
            margin-left auto
            margin-right auto

            @media (min-width 700px)
                margin-bottom (30/1.6)px
                {ibm}

            @media (min-width 768px)
                padding (14/1.4)px (20/1.4)px
                margin-bottom (30/1.4)px
                width (300/1.4)px

            @media (min-width 992px)
                padding (14/1.15)px (20/1.15)px
                margin-bottom (30/1.15)px
                width (300/1.15)px

            @media (min-width 1100px)
                padding 14px 20px
                margin-bottom 30px
                width 300px

            &:nth-of-type(2n)
                @media (min-width 700px)
                    margin-right (420/1.6)px

                @media (min-width 768px)
                    margin-right (420/1.4)px

                @media (min-width 992px)
                    margin-right (420/1.15)px

                @media (min-width 1100px)
                    margin-right 420px

            &:nth-last-of-type(2)
                @media (min-width 700px)
                    margin-right (50/1.6)px

                @media (min-width 768px)
                    margin-right (50/1.4)px

                @media (min-width 992px)
                    margin-right (50/1.15)px

                @media (min-width 1100px)
                    margin-right 50px

    &__circle-bg
        display none

        @media (min-width 700px)
            display block
            border-radius 50%
            position absolute
            top 50%
            left 50%
            transform translate(-50%, -50%)

        &_biggest
            width (1075/1.45)px
            height (1075/1.45)px
            background-color #f7fcfb

            @media (min-width 480px)
                width (1075/1.6)px
                height (1075/1.6)px

            @media (min-width 768px)
                width (1075/1.4)px
                height (1075/1.4)px

            @media (min-width 992px)
                width (1075/1.15)px
                height (1075/1.15)px

            @media (min-width 1100px)
                width 1075px
                height 1075px

        &_big
            width (770/1.45)px
            height (770/1.45)px
            background-color #edf9f6

            @media (min-width 480px)
                width (770/1.6)px
                height (770/1.6)px

            @media (min-width 768px)
                width (770/1.4)px
                height (770/1.4)px

            @media (min-width 992px)
                width (770/1.15)px
                height (770/1.15)px

            @media (min-width 1100px)
                width 770px
                height 770px

        &_medium
            width (570/1.45)px
            height (570/1.45)px
            background-color #e1f5f0

            @media (min-width 480px)
                width (570/1.6)px
                height (570/1.6)px

            @media (min-width 768px)
                width (570/1.4)px
                height (570/1.4)px

            @media (min-width 992px)
                width (570/1.15)px
                height (570/1.15)px

            @media (min-width 1100px)
                width 570px
                height 570px

        &_small
            width (370/1.45)px
            height (370/1.45)px
            background-color #d8f1ec

            @media (min-width 480px)
                width (370/1.6)px
                height (370/1.6)px

            @media (min-width 768px)
                width (370/1.4)px
                height (370/1.4)px

            @media (min-width 992px)
                width (370/1.15)px
                height (370/1.15)px

            @media (min-width 1100px)
                width 370px
                height 370px

    &__img-bg
        position absolute
        width 100%
        height 100%
        top 50%
        left 50%
        transform translate(-50%, -50%)
        background-image url(../img/product-img-m.png)
        background-size 130px
        background-position bottom
        background-repeat no-repeat

        @media (min-width 700px)
            background-image url(../img/product-img.png)
            background-position center
            background-size (370/1.6)px

        @media (min-width 768px)
            background-size (370/1.4)px

        @media (min-width 992px)
            background-size (370/1.15)px

        @media (min-width 1100px)
            background-size 370px

