.product
    font-size 0
    overflow hidden
    background-color #f8fcfb

    &__list
        position relative
        background-image url(../img/product-img-m.png)
        background-repeat no-repeat
        padding-left 30px
        padding-right 30px
        padding-bottom 240px
        background-position center bottom

        @media (min-width 768px)
            background-position 30px center
            padding-left 202px
            padding-right 30px
            padding-bottom 0

        ul
            font-size-func(14)
            padding-left 0
            list-style none
            position relative
            text-align center

        li
            hyphens()
            {ibm}
            padding (14/1.6)px (20/1.6)px
            border 1px solid #5fc79c
            border-radius 10px
            text-align center
            position relative
            margin-bottom 20px

            @media (min-width 700px)
                margin-bottom (30/1.6)px

            @media (min-width 768px)
                padding (14/1.4)px (20/1.4)px
                margin-bottom (30/1.4)px

            @media (min-width 992px)
                padding (14/1.15)px (20/1.15)px
                margin-bottom (30/1.15)px

            @media (min-width 1100px)
                padding 14px 20px
                margin-bottom 30px

            &:last-child
                margin-bottom 0

