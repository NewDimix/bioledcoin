.news-block
    &__left-block
        margin-bottom 5px

        @media (min-width 768px)
            width 48%
            float left
            margin-right 3%

    &__header
        text-align left
        font-size 0
        margin-bottom 10px

    &__date
        {ibt}
        color white
        background-color $green-color
        padding 15px
        border-radius 5px
        font-size-func(16)
        ellipsis()
        max-width 100%

    &__img
        width 100%
        height 300px

    &__content
        @media (min-width 768px)
            min-height 405px

        @media (min-width 992px)
            min-height 365px

    &__title
        padding-top 25px
        margin-bottom 40px
        text-align center

        @media (min-width 768px)
            padding-top 10px
            margin-bottom 60px
            text-align right

        @media (min-width 992px)
            margin-bottom 40px

        h2
            font-weight 400
            font-size-func(26)
            text-transform uppercase
            margin-top 0
            margin-bottom 0
            hyphens()

    &__text
        font-size-func(16)
        line-height 2em
        text-align justify
        text-indent 30px
        margin-bottom 30px

        @media (min-width 480px)
            margin-bottom 45px

    &__btn
        text-align center
        ellipsis()
        padding 5px

        @media (min-width 768px)
            text-align right

        .btn
            max-width 80%
