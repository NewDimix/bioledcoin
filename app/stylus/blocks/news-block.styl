.news-block
    &__left-block
        margin-bottom 15px

        @media (min-width 768px)
            width 48%
            float left
            margin-right 3%

    &__header
        margin-bottom 0
        text-align right
        font-size 0

        @media (min-width 480px)
            margin-bottom 10px

        @media (min-width 768px)
            margin-bottom 0

        @media (min-width 992px)
            margin-bottom 10px

    &__date
        {ibt}
        color white
        font-size 0
        background-color $green-color
        padding 15px
        border-radius 5px

        @media (min-width 480px)
            float left

        @media (min-width 768px)
            float none

        @media (min-width 992px)
            float left

        span
            font-size-func(18)

            &:not(:last-child)
                &:after
                    content '/'

    &__author
        position relative
        {ibm}
        color gray
        padding-top 17px
        padding-bottom 17px
        font-size-func(14)
        padding-left 30px

        @media (min-width 480px)
            font-size-func(16)

        &:before
            content ''
            position absolute
            top 52%
            left 4px
            transform translateY(-50%)
            background inline('user-icon.svg')
            background-position center
            background-size contain
            background-repeat no-repeat
            width 20px
            height 20px

        &:after
            content '|'
            color $grey-dark-color

    &__comments
        position relative
        {ibm}
        color gray
        padding-top 17px
        padding-bottom 17px
        font-size-func(14)
        padding-left 30px

        @media (min-width 480px)
            font-size-func(16)

        &:before
            content ''
            position absolute
            top 54%
            left 6px
            transform translateY(-50%)
            background inline('message-icon.svg')
            background-position center
            background-size contain
            background-repeat no-repeat
            width 18px
            height 18px

        &:after
            content '|'
            color $grey-dark-color

    &__img
        img
            {ibt}
            width 100%
            height 300px
            object-fit cover

    &__content
        @media (min-width 768px)
            min-height 405px

        @media (min-width 992px)
            min-height 365px

    &__title
        padding-top 25px
        margin-bottom 40px
        text-align center

        @media (min-width 768px)
            padding-top 10px
            margin-bottom 60px
            text-align right

        @media (min-width 992px)
            margin-bottom 40px

        h2
            font-weight 400
            font-size-func(26)
            text-transform uppercase
            margin-top 0
            margin-bottom 0

    &__text
        font-size-func(16)
        text-align justify
        text-indent 30px
        margin-bottom 30px

        @media (min-width 480px)
            margin-bottom 45px

    &__btn
        text-align center

        @media (min-width 768px)
            text-align right
