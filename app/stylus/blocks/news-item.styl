.news-item
    {ibt}
    position relative
    height 271px
    overflow hidden
    margin-right 49px

    &_small
        width 275px !important

    &_big
        width 597px !important

    &__img
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
        width 100%

        img
            object-fit cover
            width 100%
            height 271px

    &__text
        position absolute
        bottom 0
        left 0
        padding 18px 21px
        color white
        font-size-func(18)

    &__date
        position relative
        margin-bottom 8px

    &__title
        position relative

        h3
            margin-top 0
            margin-bottom 0
            font-weight 400

    &__gradient
        position absolute
        height 271px
        width 100%
        top 0
        left 0
        background linear-gradient(to bottom, transparent 50%, rgba(0, 0, 0, .7) 100%)
