.news-item
    position relative
    height 160px
    overflow hidden
    background-color white

    @media (min-width 400px)
        height 200px
        margin-right 7%

    @media (min-width 590px)
        height 271px

    &:last-child
        margin-right 0

    &:hover
        .news-item__img
            img
                opacity 1

        .news-item__gradient
            transform translateY(0)

    &_small
        display block
        margin-bottom 15px

        @media (min-width 400px)
            {ibt}
            width 46.5%
            margin-bottom 0

        &:hover
            .news-item__img
                img
                    transform scale(1.125)

    &_big
        display block

        &:hover
            .news-item__img
                img
                    transform scale(1.065)

    &__img
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
        width 100%

        img
            object-fit cover
            width 100%
            height 271px
            opacity .7
            transition all .5s ease

    &__text
        position absolute
        bottom 0
        left 0
        padding 9px 10px
        color white
        font-size-func(14)

        @media (min-width 400px)
            padding 12px 14px
            font-size-func(16)

        @media (min-width 590px)
            padding 18px 21px
            font-size-func(18)

    &__date
        position relative
        margin-bottom 8px

    &__title
        position relative

        h3
            margin-top 0
            margin-bottom 0
            font-weight 400

    &__gradient
        position absolute
        height 160px
        width 100%
        top 0
        left 0
        background linear-gradient(to bottom, transparent 50%, rgba(0, 0, 0, .7) 100%)
        transform translateY(20px)
        transition all .5s ease

        @media (min-width 400px)
            height 200px

        @media (min-width 590px)
            height 271px
