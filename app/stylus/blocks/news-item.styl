.news-item
    position relative
    height 160px
    overflow hidden
    background-color white

    @media (min-width 400px)
        height 200px
        margin-right 7%

    @media (min-width 590px)
        height 271px

    &:first-child
        margin-bottom 15px

        @media (min-width 400px)
            margin-bottom 25px

        @media (min-width 590px)
            margin-bottom 35px

        @media (min-width 768px)
            margin-bottom 40px

    &:hover, &:focus
        .news-item__img
            img
                opacity 1

        .news-item__gradient
            transform translateY(0)

    &:focus
        outline none

    &_small
        display block
        margin-bottom 15px

        @media (min-width 400px)
            {ibt}
            width 46.5%
            margin-bottom 0

        &:hover, &:focus
            .news-item__img
                img
                    transform scale(1.125)

        &+.news-item_small
            @media (min-width 400px)
                margin-right 0

        .news-item__video-wrap
            padding-bottom 50.25%
            padding-top 0px

            @media (min-width 400px)
                padding-bottom 110.25%
                padding-top 0px

            @media (min-width 590px)
                padding-bottom 100.25%
                padding-top 0px

    &_big
        display block

        @media (min-width 400px)
            margin-right 0

        &:hover, &:focus
            .news-item__img
                img
                    transform scale(1.065)

        .news-item__video-wrap
            padding-bottom 50.25%
            padding-top 0px

            @media (min-width 400px)
                padding-bottom 51.25%
                padding-top 0px

            @media (min-width 590px)
                padding-bottom 46.25%
                padding-top 0px

    &__img
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%) scale(1.01)
        width 100%

        img
            object-fit cover
            width 100%
            height 271px
            opacity .7
            transition all .5s ease

    &__text
        position absolute
        bottom 0
        left 0
        color white
        font-size-func(14)
        hyphens()
        width 100%
        text-shadow 0 0 7px black

        @media (min-width 400px)
            padding 12px 14px
            font-size-func(16)

        @media (min-width 590px)
            padding 18px 21px
            font-size-func(16)

    &__date
        position relative
        margin-bottom 8px
        padding-left 10px
        ellipsis()

    &__title
        position relative
        max-height 127px
        margin-bottom 5px
        overflow hidden
        padding-left 10px
        padding-bottom 9px
        hyphens()

        @media (min-width 400px)
            max-height 150px

        @media (min-width 590px)
            max-height 205px

        h3
            margin-top 0
            margin-bottom 0
            font-weight 400

    &__gradient
        position absolute
        height 160px
        width 100%
        top 0
        left 0
        background linear-gradient(to bottom, transparent 50%, rgba(0, 0, 0, .7) 100%)
        transform translateY(20px)
        transition all .5s ease

        @media (min-width 400px)
            height 200px

        @media (min-width 590px)
            height 271px
