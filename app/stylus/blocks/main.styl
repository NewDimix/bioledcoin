.main
    position relative
    background-color white
    font-size-func(20)
    margin-bottom 40px

    @media (min-width 480px)
        margin-bottom 60px

    @media (min-width 768px)
        margin-bottom 80px

    @media (min-width 992px)
        margin-bottom 100px

    @media (min-width 1265px)
        margin-bottom 140px

    &:after
        @media (min-width 768px)
            content inline('rectangle.png')
            position absolute
            left 50%
            bottom 0
            transform translate(-40%, 110px)

    &_account
        margin-bottom 0 !important
        background none

        &:after
            display none

        .main
            &__nav-left
                position fixed
                top 0
                bottom 0
                left -211px
                height 100%
                width 211px
                text-align center
                overflow-y auto
                transition all 0s ease-out 0s
                z-index 10
                transition box-shadow .4s ease

                @media (min-width 768px)
                    left 0 !important

    &_news
        margin-bottom 0 !important
        background none

        &:after
            display none
