.main
    position relative
    background-color white
    font-size-func(20)
    margin-bottom 40px

    @media (min-width 480px)
        margin-bottom 60px

    @media (min-width 768px)
        margin-bottom 80px

    @media (min-width 992px)
        margin-bottom 100px

    @media (min-width 1265px)
        margin-bottom 140px

    &:after
        @media (min-width 768px)
            content inline('rectangle.png')
            position absolute
            left 50%
            bottom 0
            transform translate(-40%, 110px)

    &_one-page
        flex 1 0 auto
        display flex
        flex-direction row

        > div
            width 100%
            align-items stretch

        &+.footer
            flex 0 0 auto

    &_account
        margin-bottom 0 !important
        background none

        &:after
            display none

        .main
            &__logo
                margin-bottom 25px

            &__nav-left
                position fixed
                top 0
                bottom 0
                left -211px
                height 100%
                width 211px
                padding-top 25px
                text-align center
                overflow-y auto
                transition all 0s ease-out 0s
                z-index 10

                @media (min-width 768px)
                    left 0 !important

            &__content-right
                padding-left 40px
                padding-right 40px

                @media (min-width 768px)
                    padding-left 251px

            &__panel
                text-align right
                border-bottom 1px solid #f0f0f0
                margin-bottom 30px
                margin-left -40px
                margin-right -40px

            &__balance, &__earn, &__transactions, &__traiding, &__settings
                display none
