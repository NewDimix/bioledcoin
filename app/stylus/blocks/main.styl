.main
    position relative
    background-color white
    font-size-func(20)

    &_account
        background none

        .main
            &__nav-left
                position fixed
                top 0
                bottom 0
                left -211px
                height 100%
                width 211px
                text-align center
                overflow-y auto
                transition all 0s ease-out 0s
                z-index 10
                transition box-shadow .4s ease

                @media (min-width 768px)
                    left 0 !important

    &_news
        margin-bottom 0 !important
        background none

        &:after
            display none
