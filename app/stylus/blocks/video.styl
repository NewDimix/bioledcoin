.video
    background-color #f8fcfb

    &__videos-wrap
        text-align center

    &__videos-item
        position relative
        height (222/1.4)px
        width (375/1.4)px
        overflow hidden
        background-color white
        transition all 1s ease
        margin-left auto
        margin-right auto

        @media (min-width 480px)
            height (222*1.2)px
            width (375*1.2)px

        @media (min-width 768px)
            height (222*1.9)px
            width (375*1.9)px

        @media (min-width 992px)
            height (222*2.5)px
            width (375*2.5)px

        @media (min-width 1200px)
            height (222*3.1)px
            width (375*3.1)px

        @media (min-width 1315px)
            height (222*3.3)px
            width (375*3.3)px

        &:focus
            outline none

    &__youtube
        background-position center
        background-repeat no-repeat
        background-size 110%
        position relative
        display inline-block
        overflow hidden
        transition all 200ms ease-out
        cursor pointer
        width inherit
        height inherit

    &__play
        background inline('play-icon.svg') no-repeat
        background-position center
        background-size 15%
        position absolute
        height 100%
        width 100%
        opacity .8
        transition all 0.2s ease-out

        &:hover
            opacity 1
