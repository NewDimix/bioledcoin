.benefit
    padding-top 15px
    padding-bottom 18px
    font-size 0
    position relative

    @media (min-width 480px)
        padding-top 19px
        padding-bottom 22px

    @media (min-width 768px)
        padding-top 22px
        padding-bottom 32px

    @media (min-width 992px)
        padding-top 27px
        padding-bottom 42px

    @media (min-width 1265px)
        padding-top 32px
        padding-bottom 77px

    &__text
        font-size 14px
        line-height 24px
        line-height 2.4rem
        text-align center

        @media (min-width 768px)
            text-align left

        @media (min-width 992px)
            {ibt}
            width 50%

        p
            margin-bottom 25px

        ul
            padding-left 15px
            text-align left

    &__title
        hyphens()

        h2
            text-align center
            font-weight 300
            font-size-func(35)
            margin-top 0
            margin-bottom 25px

            @media (min-width 480px)
                font-size-func(38)
                margin-bottom 40px

            @media (min-width 768px)
                font-size-func(41)
                margin-bottom 50px

            @media (min-width 992px)
                font-size-func(44)
                margin-bottom 60px

            @media (min-width 1265px)
                font-size-func(48)
                margin-bottom 78px

    &__img
        height 400px
        background-image url(../img/arrow-trees-img.png)
        background-repeat no-repeat
        background-position center bottom
        background-size contain

        @media (min-width 400px)
            height 450px

        @media (min-width 480px)
            height 500px

        @media (min-width 992px)
            {ibt}
            width 48%
            margin-left 2%

        span
            font-size-func(44)
            color #00ddb6

            @media (min-width 480px)
                font-size-func(49)

            @media (min-width 768px)
                font-size-func(54)

            @media (min-width 992px)
                font-size-func(59)

            @media (min-width 1265px)
                font-size-func(64)
