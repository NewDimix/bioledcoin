.question
    background-color #f6f6f6

    &__form
        position relative
        font-size-func(16)

        @media (min-width 480px)
            font-size-func(19)

        @media (min-width 768px)
            font-size-func(21)

        @media (min-width 992px)
            font-size-func(23)

        @media (min-width 1100px)
            font-size-func(25)

        textarea
            width 100%
            border none
            background-color white
            padding 30px 45px
            min-height 245px
            border-radius 40px
            resize vertical
            transition all 0.2s ease

            &:focus
                box-shadow 0 0 1px 1px $turquoise-color
                outline none

        input
            width 100%
            text-align center
            border none
            padding-top 20px
            padding-bottom 20px
            border-radius 50px
            transition all 0.2s ease

            &:focus
                box-shadow 0 0 1px 1px $turquoise-color
                outline none

            &:first-child
                text-transform uppercase
                margin-bottom 15px

            &:last-child
                color white
                background-color #00ad5d
                max-width 300px

                @media (min-width 992px)
                    max-width none

                &:hover
                    background-color #009852

                &:focus
                    box-shadow 0 0 0 1px #f6f6f6, 0 0 0 3px $turquoise-color
                    outline none

    &__form-row
        {ibm}

        &:first-child
            width 100%
            margin-bottom 45px

            @media (min-width 992px)
                width 100%
                padding-right 345px
                margin-bottom 0

        &:last-child
            width 100%
            text-align center

            @media (min-width 992px)
                position absolute
                right 0
                top 0
                width 305px

    .g-recaptcha
        margin-bottom 15px
