html
    box-sizing border-box
    font-size 62.5%
    height 100%

*, *:before, *:after
    box-sizing inherit

body
    background-color white
    min-width 320px
    font-family GothamPro, arial, verdana, sans-serif
    font-weight 400
    font-style normal
    line-height normal
    color $dark-color
    height 100%
    min-height auto

    &.body_account
        background-color #f8f9fd
        min-width 480px

    &.body_one-page
        display flex
        flex-direction column

        .main
            flex 1 0 auto

        .footer
            flex 0 0 auto

.container
    position relative
    max-width 1265px
    padding-left 10px
    padding-right 10px
    margin-left auto
    margin-right auto

p
    margin-top 0
    margin-bottom 10px

    &:last-child
        margin-bottom 0
